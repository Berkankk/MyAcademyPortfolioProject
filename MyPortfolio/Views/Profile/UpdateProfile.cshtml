@model MyPortfolio.Models.TblAdmins
@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h3>Ayarları Güncelleme</h3>


<form method="post">
    <input type="hidden" name="AdminId" value="@Model.AdminId" />
    <label>Kullanıcı Adı:</label>
    <input type="text" name="UserName" value="@Model.UserName" class="form-control" required />
    <br />
    <label>Şifre</label>
    <input type="password" name="Password" value="@Model.Password" class="form-control" required />
    <br />
    <button type="submit" class="btn btn-outline-success">Güncelle</button>
</form>

