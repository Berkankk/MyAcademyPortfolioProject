@model MyPortfolio.Models.TblSkills
@{
    ViewBag.Title = "UpdateSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Yetenek Güncelleme Sayfası</h2>


<form method="post" id="skillForm">
    <input type="hidden" name="SkillId" value="@Model.SkillId" />
    <label>Teknoloji Adı</label>
    <input type="text" name="SkillName" value="@Model.SkillName" class="form-control" />
    <br />
    <label>Başarı Değeri</label>
    <input type="text" name="Value" value="@Model.Value" class="form-control" id="successValue" required />
    <br />
    <button type="submit" class="btn btn-outline-success">Güncelle</button>
</form>

