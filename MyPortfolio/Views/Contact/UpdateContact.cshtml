@model MyPortfolio.Models.TblContacts
@{
    ViewBag.Title = "UpdateContact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>İletişim Bilgisi Güncelleme Sayfası</h3>

<form method="post" id="contactForm">
    <input type="hidden" name="ContactId" value="@Model.ContactId" />

    <label>Ad Soyad</label>
    <input type="text" name="NameSurname" value="@Model.NameSurname" class="form-control" />
    <br />
    <label>Adres</label>
    <input type="text" name="Adress" value="@Model.Address" class="form-control" />
    <br />
    <label>Telefon Numarası</label>
    <input type="text" name="Phone" value="@Model.Phone" class="form-control" id="phone-input" pattern="\(\d{3}\) \d{3}-\d{4}" title="(999) 999-9999 formatında olmalıdır." required />
    <br />
    <label>Email</label>
    <input type="email" name="Email" value="@Model.Email" class="form-control" />
    <br />
    <button type="submit" class="btn btn-outline-success">Güncelle</button>
</form>

